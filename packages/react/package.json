{
  "name": "@touchspin/react",
  "version": "5.0.1-alpha.0",
  "description": "React adapter for TouchSpin with per-renderer subpaths",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./bootstrap3": {
      "types": "./dist/bootstrap3.d.ts",
      "import": "./dist/bootstrap3.js"
    },
    "./bootstrap4": {
      "types": "./dist/bootstrap4.d.ts",
      "import": "./dist/bootstrap4.js"
    },
    "./bootstrap5": {
      "types": "./dist/bootstrap5.d.ts",
      "import": "./dist/bootstrap5.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    },
    "./vanilla": {
      "types": "./dist/vanilla.d.ts",
      "import": "./dist/vanilla.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsup",
    "build:test": "tsup",
    "build:watch": "tsup --watch",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@touchspin/core": "5.0.1-alpha.0",
    "@touchspin/renderer-bootstrap3": "5.0.1-alpha.0",
    "@touchspin/renderer-bootstrap4": "5.0.1-alpha.0",
    "@touchspin/renderer-bootstrap5": "5.0.1-alpha.0",
    "@touchspin/renderer-tailwind": "5.0.1-alpha.0",
    "@touchspin/renderer-vanilla": "5.0.1-alpha.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.0",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "touchspin",
    "react",
    "spinner",
    "number-input",
    "bootstrap",
    "tailwind"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-react.git"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-react/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/touchspin-react#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/istvan-ujjmeszaros"
  }
}
