{
  "name": "@touchspin/react",
  "version": "5.0.1-alpha.1",
  "description": "React adapter for TouchSpin with per-renderer subpaths",
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./bootstrap3": {
      "types": "./dist/bootstrap3.d.ts",
      "import": "./dist/bootstrap3.js"
    },
    "./bootstrap4": {
      "types": "./dist/bootstrap4.d.ts",
      "import": "./dist/bootstrap4.js"
    },
    "./bootstrap5": {
      "types": "./dist/bootstrap5.d.ts",
      "import": "./dist/bootstrap5.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    },
    "./vanilla": {
      "types": "./dist/vanilla.d.ts",
      "import": "./dist/vanilla.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsup",
    "build:test": "tsup",
    "build:watch": "tsup --watch",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@touchspin/core": "5.0.1-alpha.0",
    "@touchspin/renderer-bootstrap3": "5.0.1-alpha.1",
    "@touchspin/renderer-bootstrap4": "5.0.1-alpha.1",
    "@touchspin/renderer-bootstrap5": "5.0.1-alpha.1",
    "@touchspin/renderer-tailwind": "5.0.1-alpha.1",
    "@touchspin/renderer-vanilla": "5.0.1-alpha.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "touchspin",
    "react",
    "spinner",
    "number-input",
    "bootstrap",
    "tailwind"
  ],
  "author": "TouchSpin Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-react.git"
  },
  "bugs": {
    "url": "https://github.com/istvan-ujjmeszaros/touchspin-react/issues"
  },
  "homepage": "https://github.com/istvan-ujjmeszaros/touchspin-react#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/istvan-ujjmeszaros"
  }
}
